<h1>Views</h1>

<h3>Templates</h3>

<p class="code js">
  <pre>
    var ChangePriceView = Backbone.View.extend({

      events: {
        'click input[type=button]': 'change'
      },

      change: function() {
        var price = $('input[type=text]').val();
        this.model.set({price: price});
      }
    });
  </pre>

  <pre>
    var book = new Book({title: "The Life of Milarepa", price: 11});

    var change_price_view = new ChangePriceView({model: book});
    var book_view = new BookView({model: book});
  </pre>
</p>

<div class="content"></div>


<script type="text/template" id="change_price_form">
  <label>Price</label>
  <input type="text" id="price" value="{{ price }}"/>
  <input type="button" id="search_button" value="Change" />
</script>

<%= javascript_tag do %>
  var book;
  jQuery(function($) {
    book = new Book({title: "The Life of Milarepa", price: 11});

    var change_price_view = new ChangePriceView({model: book});
    var book_view = new BookView({model: book});

    $('.content').append(change_price_view.render().el);
    $('.content').append(book_view.render().el);
  });
<% end %>

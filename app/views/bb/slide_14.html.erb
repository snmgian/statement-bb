<h1>Views</h1>

<h3>Bindings</h3>

<div class="demo"></div>

<div class="code_wrapper">
  <pre class="brush: javascript">
    var ChangePriceBoundView = Backbone.View.extend({

      render: function() {
        // render ...

        Backbone.ModelBinding.bind(this);
        return this;
      }
    });
  </pre>
</div>

<div class="code_wrapper">
  <pre class="brush: javascript">
    var change_price_view = new ChangePriceBoundView({model: book});
    var book_view = new BookView({model: book});
  </pre>
</div>

<script type="text/template" id="change_price_form">
  <label>Price</label>
  <input type="text" id="price" value="{{ price }}"/>
</script>

<%= javascript_tag do %>
  var book;
  jQuery(function($) {
    book = new Book({title: "The Life of Milarepa", price: 11});

    var change_price_view = new ChangePriceBoundView({model: book});
    var book_view = new BookView({model: book});

    $('.demo').append(change_price_view.render().el);
    $('.demo').append(book_view.render().el);
  });
<% end %>
